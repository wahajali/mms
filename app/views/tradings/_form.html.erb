<%= bootstrap_form_for @trading, :html => { :class => "form-horizontal trading" } do |f| %>

    <% if @trading.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@trading.errors.count, "error") %> prohibited this trading from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @trading.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= render partial: 'shared/shared_partials', locals: { common_data: @common_data, f: f, address: @address, phone_number: @phone_numbers } %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            tradings_path, :class => 'btn btn-default' %>

<% end %>
