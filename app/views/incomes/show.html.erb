<%- model_class = Income -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @income.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:income_category_id) %>:</strong></dt>
  <dd><%= @income.income_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:income_sub_category_id) %>:</strong></dt>
  <dd><%= @income.income_sub_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:income_type_id) %>:</strong></dt>
  <dd><%= @income.income_type_id %></dd>
  <dt><strong>Paid To:</strong></dt>
  <dd><%= @income.benefactor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @income.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_centerable_id) %>:</strong></dt>
  <dd><%= @income.cost_centerable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_centerable_type) %>:</strong></dt>
  <dd><%= @income.cost_centerable_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              incomes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_income_path(@income), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              income_path(@income),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
