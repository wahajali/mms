<%- model_class = BsOrPlSubCategory -%>
<div class="page-header">
  <h1>Balance Sheet and Profit and Loss Categories</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Parent BS or PL Category</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bs_or_pl_sub_categories.each do |bs_or_pl_sub_category| %>
      <tr>
        <td><%= link_to(bs_or_pl_sub_category.name, bs_or_pl_sub_category_path(bs_or_pl_sub_category)) %></td>
        <td><%= bs_or_pl_sub_category.bs_or_pl_category.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bs_or_pl_sub_category_path(bs_or_pl_sub_category), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bs_or_pl_sub_category_path(bs_or_pl_sub_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bs_or_pl_sub_category_path,
            :class => 'btn btn-primary' %>
