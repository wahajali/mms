<%= bootstrap_form_for @bs_or_pl_sub_category, :html => { :class => "form-horizontal bs_or_pl_sub_category" } do |f| %>

  <% if @bs_or_pl_sub_category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bs_or_pl_sub_category.errors.count, "error") %> prohibited this bs_or_pl_sub_category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @bs_or_pl_sub_category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if action_name == 'create' || action_name == 'new' %>
    <%= f.select :bs_or_pl_category_id, options_for_select(BsOrPlCategory.all.map{ |c| ["#{c.name} (#{c.get_name})", c.id, {'class' => c.get_name }]}), {label: 'Parent Category'}, class: 'bs-or-pl-select' %>
  <% end %>

  <%= f.text_field :name, :class => 'form-control' %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    bs_or_pl_sub_categories_path, :class => 'btn btn-default' %>

  <% end %>
