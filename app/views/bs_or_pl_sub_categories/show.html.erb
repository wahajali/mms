<%- model_class = BsOrPlSubCategory -%>
<div class="page-header">
  <h1>Balance Sheet or Profit and Loss Sub-Category</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bs_or_pl_sub_category.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bs_or_pl_category_id) %>:</strong></dt>
  <dd><%= @bs_or_pl_sub_category.bs_or_pl_category_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              bs_or_pl_sub_categories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bs_or_pl_sub_category_path(@bs_or_pl_sub_category), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bs_or_pl_sub_category_path(@bs_or_pl_sub_category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
