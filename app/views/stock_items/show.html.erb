<%- model_class = StockItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @stock_item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @stock_item.manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_centerable_id) %>:</strong></dt>
  <dd><%= @stock_item.cost_centerable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_centerable_type) %>:</strong></dt>
  <dd><%= @stock_item.cost_centerable_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stock_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_item_path(@stock_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_item_path(@stock_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
