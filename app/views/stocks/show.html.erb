<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:medicine_id) %>:</strong></dt>
  <dd><%= @stock.medicine_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_date) %>:</strong></dt>
  <dd><%= @stock.purchase_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_qty) %>:</strong></dt>
  <dd><%= @stock.purchase_qty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_details) %>:</strong></dt>
  <dd><%= @stock.purchase_details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_price) %>:</strong></dt>
  <dd><%= @stock.purchase_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expiry) %>:</strong></dt>
  <dd><%= @stock.expiry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:present_stock) %>:</strong></dt>
  <dd><%= @stock.present_stock %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              medicine_stocks_path(@medicine), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medicine_stock_path(@medicine, @stock), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medicine_stock_path(@medicine, @stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
