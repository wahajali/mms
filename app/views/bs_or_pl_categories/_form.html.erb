<%= bootstrap_form_for @bs_or_pl_category, :html => { :class => "form-horizontal bs_or_pl_category" } do |f| %>

    <% if @bs_or_pl_category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bs_or_pl_category.errors.count, "error") %> prohibited this bs_or_pl_category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bs_or_pl_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <%= f.text_field :name %>

  <%= f.select(:bl_or_pl, [["Balance Sheet", "Balance Sheet"], ["Profit and Loss", "Profit and Loss"]]) %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            bs_or_pl_categories_path, :class => 'btn btn-default' %>

<% end %>
