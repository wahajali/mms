<%- model_class = Expense -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @expense.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expense_category_id) %>:</strong></dt>
  <dd><%= @expense.expense_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receipient) %>:</strong></dt>
  <dd><%= @expense.receipient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expense_type_id) %>:</strong></dt>
  <dd><%= @expense.expense_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @expense.amount %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              expenses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_expense_path(@expense), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              expense_path(@expense),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
