<h2>Sign up</h2>

<%= bootstrap_form_for(@user, url: user_registration_path) do |f| %>
  <%#= devise_error_messages! %>

  <%= f.text_field :first_name, style: 'width: 40%' %>
  <%= f.text_field :last_name, style: 'width: 40%' %>
  <%= f.email_field :email, style: 'width: 40%' %>
  <%= f.password_field :password, autocomplete: "off", style: 'width: 40%'  %>
  <%= f.password_field :password_confirmation, autocomplete: "off", style: 'width: 40%'  %>
  <%= f.check_box :admin, label: 'Assign admin role' %>
  <%= f.submit "Sign up", class: 'btn btn-success' %>
<% end %>

<%#= render "devise/shared/links" %>
